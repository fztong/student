  <%= form_for @classname do |f| %>
 
  <% if @classname .errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@classname .errors.count, "error") %> prohibited
       
      </h2>
      <ul>
        <% @classname .errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    班级序号 <br>
    <%= f.text_field :cno %>
  </p>

  <p>
    班级名称 <br>
    <%= f.text_field :cname  %>
  </p>
 
  <p>
    班级信息 <br>
    <%= f.text_area :ctext %>
  </p>
  
  <p>
    教师信息 <br>
    <%= f.select "teacher_id", options_for_select(Teacher.all.map{|t| [t.tname, t.id]})%>
  </p>
  

  <p>
    <%= f.submit "提交" %>
  </p>
 
  <% end %>
