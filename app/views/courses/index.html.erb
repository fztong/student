<h1>课程目录</h1>
<%= link_to '新添课程', new_course_path %>
<table border="1" cellspacing="0" cellpadding="0" style="border-collapse: collapse;”>
<table border="1" cellspacing="0" cellpadding="0" style="border-collapse: collapse;border-width:0px; border-style:hidden;">
  <tr>
    <th>课程号</th>
    <th>课程名</th>
    <!-- <th>任课老师</th> -->
    <th>展示 修改 删除</th>
    
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.courseno  %></td>
      <td><%= course.coursename %></td>    
      <td><%= link_to '展示', course_path(course) %>
          <%= link_to '修改', edit_course_path(course) %>
          <%= link_to '删除', course_path(course),
              method: :delete,
              data: { confirm: '是否确认删除?' }%></td>
    </tr>
  <% end %>
</table>
<td><%= link_to '返回', classnames_path %></td>

