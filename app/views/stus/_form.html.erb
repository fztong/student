  <%= form_for @stu do |f| %>
 

  <p>
    学生姓名 <br>
    <%= f.text_field :sname  %>
  </p>
 
  <p>
    学生学号 <br>
    <%= f.text_field :sno  %>
  </p>

  <p>
    学生年龄 <br>
    <%= f.text_area :sage %>
  </p>
 
  <p>
    学生性别 <br>
    <%= f.select"ssex", options_for_select([["男", 1], ["女",2]])%>
  </p>

  <p>
    学生班级 <br>
    <%= f.select "classname_id", options_for_select(Classname.all.map{|c| [c.cname, c.id]})%>
  </p>
  
  <div class="field">
    学生照片<br>
    <%= f.file_field :photo %>
  </div>

  <p>
    <%= f.submit "提交" %>
  </p>
 
  <% end %>
