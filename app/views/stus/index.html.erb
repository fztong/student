
<h1>学生信息</h1>
<%= link_to '新建学生', new_stu_path %>
<table border="1" cellspacing="0" cellpadding="0" style="border-collapse: collapse;”>
<table border="1" cellspacing="0" cellpadding="0" style="border-collapse: collapse;border-width:0px; border-style:hidden;">
  <tr>
    <th>学生姓名</th>
    <th>学生学号</th>
    <th>学生年龄</th>
    <th>学生性别</th>
    <th>学生班级</th>
    <th>展示 修改 删除</th>
    
  </tr>
 
  <% @stus.includes(:classname).each do |stu| %>
    <tr>
      <td><%= stu.sname  %></td>
      <td><%= stu.sno    %></td>
      <td><%= stu.sage   %></td>
      <td><%= stu.ssex == "1" ? "男" : "女"   %></td>
      <td><%= stu.classname.try(:cname) %> </td>
      <td><%= link_to '展示', stu_path(stu) %>
          <%= link_to '修改', edit_stu_path(stu) %>
          <%= link_to '删除', stu_path(stu),
              method: :delete,
              data: { confirm: '是否确认删除?' }%></td>
    </tr>
  <% end %>
</table>
  <%= will_paginate @stus, :previous_label => '上一页', :next_label => '下一页' %>
<td><%= link_to '返回', classnames_path %></td>

