  <%= form_for @teacher do |f| %> 
  <p>
    教师姓名 <br>
    <%= f.text_field :tname  %>
  </p>
 
  <p>
    教师年龄 <br>
    <%= f.text_field :tage  %>
  </p>

  <p>
    教师性别 <br>

    <%= f.select "tsex", options_for_select([["男", 1], ["女",2]])%>
  </p>
 
  <p>
    手机号码 <br>
    <%= f.text_area :phonenumber %>
  </p>
 
  <p>
    教师班级 <br> 
    <%= f.select "course_id", options_for_select(Course.all.map{|c| [c.coursename, c.id]})%>
  </p>
 
  <p>
    <!-- 教师班级 <br> -->
    <%#= f.select "classname_id", options_for_select(Classname.all.map{|c| [c.cname, c.id]})%>
    <%#= select_tag "classname_id", options_for_select(Classname.all.map{|c| [c.cname, c.id]})%>
  </p>
 
  <p>
    <%= f.submit "提交" %>
  </p>
 
  <% end %>
